<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/background"
                tools:layout_editor_absoluteX="-87dp"
                tools:layout_editor_absoluteY="-16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="8dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imageUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_logo" />

            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/logoutBtn"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/ic_logout"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView added here to make content scrollable -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textchucnang"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Chức năng"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <GridLayout
                    android:id="@+id/gridlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="0dp"
                    android:useDefaultMargins="true"
                    app:layout_constraintTop_toBottomOf="@+id/textchucnang"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Chức năng 1: Chấm công -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnChamCong"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewChamCong"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/calendar" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Chấm công"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 2: Khen thưởng/Kỷ luật -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnRewardAndDiscipline"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardViewKhenThuong"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardCornerRadius="48dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/reward"
                                android:layout_gravity="center"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khen thưởng/Kỷ luật"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp"/>
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 3: Nghỉ phép -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/YeucauBtn"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp" >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/contact_form" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nghỉ phép"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 4: Nâng ngạch -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView3"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/register" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Nâng ngạch"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 5: Thắc mắc/Phản hồi -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnFeedBack"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView4"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_marginTop="15dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/message" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="76dp"
                            android:gravity="center"
                            android:text="Thắc mắc"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 6: Câu hỏi thường gặp -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView5"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/chat_bubble" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="76dp"
                            android:gravity="center"
                            android:text="Câu hỏi"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 7: Lịch Sử Lương -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnSalary"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView6"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/salary" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Lương"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp" />
                    </androidx.cardview.widget.CardView>

                    <!-- Chức năng 8: Hợp Đồng -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnContracts"
                        android:layout_width="0dp"
                        android:layout_height="130dp"
                        android:layout_columnWeight="1"
                        android:padding="8dp"
                        app:cardElevation="1dp"
                        app:cardCornerRadius="12dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView7"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="15dp"
                            app:cardBackgroundColor="#A4D1E2"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="4dp"
                            android:layout_gravity="center_horizontal|top">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/contract" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Hợp Đồng"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="76dp" />
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <TextView
                    android:id="@+id/textbosung"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Công tác"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/gridlayout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:id="@+id/infoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_box_light"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textbosung"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Nơi làm việc -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text= "Nơi làm việc : Học viện Công nghệ Bưu chính Viễn Thông"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <!-- Chức vụ -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chức vụ: Phó khoa Công nghệ thông tin"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <!-- Các thẻ thông tin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <!-- Số năm làm -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            android:layout_marginEnd="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Số năm đã làm"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Khen thưởng -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            android:background="@drawable/bg_box_light"
                            android:layout_marginHorizontal="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Khen thưởng"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Kỉ luật -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="1dp"
                            android:layout_marginStart="6dp"
                            app:cardBackgroundColor="@color/deep_red">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kỉ luật"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>