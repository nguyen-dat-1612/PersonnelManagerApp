                        <!-- Chức năng 6: Duyệt phép -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/DuyetCardViewAdmin"
                            android:layout_width="0dp"
                            android:layout_height="130dp"
                            android:layout_columnWeight="1"
                            android:padding="8dp"
                            app:cardElevation="1dp"
                            app:cardCornerRadius="12dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="15dp"
                                app:cardBackgroundColor="#A4D1E2"
                                app:cardCornerRadius="48dp"
                                app:cardElevation="4dp"
                                android:layout_gravity="center_horizontal|top">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/permission" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="76dp"
                                android:gravity="center"
                                android:text="@string/approve"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:layout_gravity="center_horizontal" />
                        </androidx.cardview.widget.CardView>


                    </GridLayout>
                </FrameLayout>

                <TextView
                    android:id="@+id/textbosung"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="@string/workplace"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/layout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_box_light"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="2dp"
                    android:padding="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/textbosung"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Nơi làm việc -->
                    <TextView
                        android:id="@+id/departmentNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                    <!-- Chức vụ -->
                    <TextView
                        android:id="@+id/positionNameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"/>

                    <!-- Các thẻ thông tin -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center">

                        <!-- Số năm làm -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/serviceDurationText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/service_duration"
                                    android:textSize="12sp"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Khen thưởng -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:background="@drawable/bg_box_light"
                            android:layout_marginHorizontal="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/numRewardText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/pink"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rewards"
                                    android:textSize="12sp"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Kỉ luật -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_marginStart="6dp"
                            app:cardBackgroundColor="@color/deep_red">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <TextView
                                    android:id="@+id/numDisciplineText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="20sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/disciplines"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>