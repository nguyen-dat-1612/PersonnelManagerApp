<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:HD="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="contract"
            type="com.managerapp.personnelmanagerapp.domain.model.Contract" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvContractId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Mã HD: " + contract.contractId}'
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvContractType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text='@{"Loại: " + contract.contractTypeId}'
                    android:textSize="14sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{contract.isActive ? "\uD83D\uDFE2 Còn hiệu lực" : "\uD83D\uDD34 Hết hạn"}'
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
