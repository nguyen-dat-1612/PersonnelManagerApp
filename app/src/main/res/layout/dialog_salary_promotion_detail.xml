<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_margin="24dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tiêu đề -->
        <TextView
            android:text="@string/salary_promotion_detail"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray" />

        <!-- Thông tin -->
        <TextView
            android:id="@+id/tvUser"
            android:layout_marginTop="12dp"
            android:text="👤 Người đề xuất: ..."
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvCurrentGrade"
            android:layout_marginTop="6dp"
            android:text="🏷️ Bậc hiện tại: ..."
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRequestGrade"
            android:layout_marginTop="6dp"
            android:text="📈 Bậc đề xuất: ..."
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvReason"
            android:layout_marginTop="6dp"
            android:text="📝 Lý do: ..."
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Ghi chú -->
        <EditText
            android:id="@+id/edtNote"
            android:hint="@string/hint_enter_approval_rejection_note"
            android:layout_marginTop="16dp"
            android:minHeight="100dp"
            android:gravity="top|start"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Nút -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReject"
                android:text="@string/reject"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:background="@drawable/button_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnApprove"
                android:text="@string/approve"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/green"
                android:layout_marginStart="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
