<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="notification"
            type="com.managerapp.personnelmanagerapp.data.local.NotificationRecipientEntity" />
    </data>

    <!-- Thay CardView báº±ng LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_bg_notification"
        android:backgroundTint="@{notification.readStatus ? @color/read_notification_bg : @color/red_light}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/notificationTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{notification.title}"
                android:textSize="16sp"
                android:textColor="@{notification.readStatus ? @color/read_notification_text : @color/red_dark}"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/notificationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{notification.sendDate.toString()}"
                android:textSize="12sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</layout>